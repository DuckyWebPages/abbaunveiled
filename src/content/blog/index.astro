---
import BaseLayout from "../../layouts/BaseLayout.astro";

// Find all posts sitting next to this file
const modules = import.meta.glob("./*.mdx", { eager: true });

const posts = Object.entries(modules)
  .filter(([path]) => !/index\.mdx$/i.test(path))
  .map(([path, mod]) => {
    const fm = mod.frontmatter || {};
    const slug = path.replace("./", "").replace(/\.mdx$/i, "");
    return {
      url: `/blog/${slug}/`,
      title: fm.title || slug,
      pubDate: fm.pubDate || "",
      excerpt: fm.excerpt || "",
      heroImage: fm.heroImage || "",
      description: fm.description || "",
      seo: fm.seo || "",
      tags: fm.tags || [],
    };
  })
  .sort((a, b) => new Date(b.pubDate) - new Date(a.pubDate));
---

<BaseLayout title="Blog" description="Latest posts from Abba Unveiled">
  <h1>Blog</h1>
  <ul style="list-style:none;padding:0;margin:1rem 0 2rem;">
    {posts.map((post) => (
      <li style="margin:1.25rem 0;border-bottom:1px solid #eee;padding:0 0 1rem;">
        <h2 style="margin:.2rem 0;">
          <a href={post.url}>{post.title}</a>
        </h2>
        {post.pubDate && <small>{post.pubDate}</small>}
        {post.excerpt && <p style="margin:.5rem 0 0;">{post.excerpt}</p>}
      </li>
    ))}
  </ul>
</BaseLayout>
