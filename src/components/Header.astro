---
// src/components/Header.astro
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro'; // if this file doesn't exist, see below
---

<header>
 
  <HeaderLink href="/songs">The Music</HeaderLink>

<HeaderLink
  href="https://www.youtube.com/channel/UCmH4bZ95_Tot8wU_EDyDcQA"
  target="_blank"
  rel="noopener noreferrer"
>
  YouTube
</HeaderLink>

  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>

    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/contact">Contact</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/podcast">Podcast</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink href="/resources">Resources</HeaderLink>
      <HeaderLink href="/songs">The Music</HeaderLink>

<HeaderLink
  href="https://www.youtube.com/channel/UCmH4bZ95_Tot8wU_EDyDcQA"
  target="_blank"
  rel="noopener noreferrer"
>
  YouTube
</HeaderLink>


    </div>

    <div class="social-links">
      <a href="https://m.webtoo.ls/@astro" target="_blank">
        <span class="sr-only">Follow Astro on Mastodon</span>
        <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
          <path fill="currentColor" d="M11.19 12.195c2.016-.24 3.77-1.475 3.99-2.603..."></path>
        </svg>
      </a>
      <a href="https://twitter.com/astrodotbuild" target="_blank">
        <span class="sr-only">Follow Astro on Twitter</span>
        <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
          <path fill="currentColor" d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334..."></path>
        </svg>
      </a>
      <a href="https://github.com/withastro/astro" target="_blank">
        <span class="sr-only">Go to Astro's GitHub repo</span>
        <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
          <path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53..."></path>
        </svg>
      </a>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 { margin: 0; font-size: 1em; }
  h2 a, h2 a.active { text-decoration: none; }


  nav { display: flex; align-items: center; justify-content: space-between; }
  nav a {
  padding: 1em 0.5em;
  color: inherit;
  border-bottom: 4px solid transparent;
  text-decoration: none;
}
/* Default (light pages) */
header {
  color: var(--black);
}

/* Dark pages (Songs uses bodyClass="theme-dark") */
:global(body.theme-dark) header {
  color: #fff !important;
  background: transparent !important;
  box-shadow: none !important;
}

  nav a.active { border-bottom-color: var(--accent); }

  .social-links, .social-links a { display: flex; }
  @media (max-width: 720px) { .social-links { display: none; } }

  /* DARK THEME OVERRIDES (songs page, etc.) */
:global(body.theme-dark) header {
  background: transparent;
  box-shadow: none;
}

:global(body.theme-dark) nav a,
:global(body.theme-dark) h2 a,
:global(body.theme-dark) header a {
  color: #fff;
}

:global(body.theme-dark) nav a.active {
  border-bottom-color: rgba(255,255,255,.75);
}
/* Dark theme overrides (when <body class="theme-dark">) */
:global(body.theme-dark) header {
  background: transparent !important;
  box-shadow: none !important;
}

:global(body.theme-dark) header h2 a,
:global(body.theme-dark) header nav a {
  color: #fff !important;
  border-bottom-color: transparent;
}

:global(body.theme-dark) header nav a.active {
  border-bottom-color: rgba(255,255,255,.7) !important;
}
/* ===== Dark theme override (Songs page uses bodyClass="theme-dark") ===== */
:global(body.theme-dark) header {
  background: transparent !important;
  box-shadow: none !important;
}

/* Make the site title + nav links white on dark pages */
:global(body.theme-dark) header a,
:global(body.theme-dark) header h2 a {
  color: #fff !important;
}
:global(body.theme-dark) nav a {
  color: #fff !important;
}


</style>
