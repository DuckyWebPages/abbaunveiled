---
const {
  title = "Get Updates â€” Join the Mailing List",
  blurb = "Occasional emails. No spam."
} = Astro.props;
---

<section class="nl">
  <div class="nl__wrap">
    <h2>{title}</h2>
    <p>{blurb}</p>

    <!-- Single button linking to Google Form -->
    <a
      class="nl__btn nl__btn--full"
      href="https://forms.gle/8n3k4G4sLhQNMRSp6"
      target="_blank"
      rel="noopener noreferrer"
    >
      Subscribe
    </a>
  </div>
</section>

<style>
  .nl { padding: 3rem 1.25rem; text-align: center; }
  .nl__wrap { max-width: 600px; margin: 0 auto; }
  .nl h2 { font-size: clamp(1.6rem, 1.5vw + 1rem, 2.2rem); margin-bottom: .5rem; }
  .nl p { margin: 0 0 1.5rem; color: #444; }

  /* Big subscribe button */
  .nl__btn {
    display: inline-block;
    font-size: 1.2rem;
    font-weight: 700;
    padding: 1rem 2.5rem;
    border-radius: 9999px;
    background: #111;
    color: #fff;
    text-decoration: none;
    box-shadow: 0 6px 18px rgba(0,0,0,.18);
    transition: transform .16s ease, filter .16s ease;
  }
  .nl__btn:hover {
    transform: translateY(-2px);
    filter: brightness(1.05);
  }
</style>
