---
// src/components/HeroVideo.astro
const {
  title = "Abba Unveiled",
  subtitle = "Getting to Know the Father Jesus Revealed",

  // Primary CTA (existing)
  bookCtaHref = "/store",
  bookCtaLabel = "Get the Book! The Yahweh Deception, by WR Selvig",

  // ✅ NEW: CTA #2
  musicCtaHref = "/songs",
  musicCtaLabel = "The Music",

  // ✅ NEW: CTA #3
  youtubeCtaHref = "https://www.youtube.com/channel/UCmH4bZ95_Tot8wU_EDyDcQA",
  youtubeCtaLabel = "YouTube",

  overlayImageSrc = "/images/tetrawhite.png",
} = Astro.props;
---



<section class="hero">
  <video class="hero__video" autoplay loop muted playsinline preload="auto" poster="/images/night-sky-poster.jpg">
    <source src="/videos/night-sky.mp4" type="video/mp4" />
    <source src="/videos/night-sky.mp4" type="video/mp4" />
    Your browser does not support HTML5 video.
  </video>

  <div class="hero__overlay"></div>

  {overlayImageSrc && (
    <img src={overlayImageSrc} alt="" aria-hidden="true" class="hero__graphic" />
  )}

  <div class="hero__content">
    <h1 class="hero__title hero-title hero-title--in-hero">{title}</h1>
    <p class="hero__subtitle">{subtitle}</p>

    <div class="front-nav">
      <div class="front-nav__row">
        <a class="btn-pill" href="/blog">Blog</a>
        <a class="btn-pill" href="/podcast">Podcast</a>
        <a class="btn-pill" href="/resources">Resources</a>
        <a class="btn-pill" href="/contact">Contact</a>
      </div>

      <!-- Mailing List link on its own line under the pills -->
      <div class="hero-mailing">
        <a
          href="https://forms.gle/8n3k4G4sLhQNMRSp6"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Join the Abba Unveiled mailing list (opens in a new tab)"
          class="hero-mailing__link"
        >
          Mailing List
        </a>
      </div>
    </div>
  </div>

  <div class="hero-cta-row" role="navigation" aria-label="Primary calls to action">
  <a class="btn-cta" href={bookCtaHref}>
    {bookCtaLabel}
  </a>

  <a class="btn-cta btn-cta-secondary" href={musicCtaHref}>
    {musicCtaLabel}
  </a>

  <a
    class="btn-cta btn-cta-secondary"
    href={youtubeCtaHref}
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Open the Abba Unveiled YouTube channel (opens in a new tab)"
  >
    {youtubeCtaLabel}
  </a>
</div>

</section>

<style>
  .hero {
    position: relative;
    width: 100%;
    min-height: 80vh;
    display: grid;
    place-items: center;
    overflow: clip;
    isolation: isolate;
    padding-bottom: 96px; /* space for bottom CTA */
  }

  .hero__video {
    position: absolute; inset: 0; width: 100%; height: 100%;
    object-fit: cover; z-index: -2; filter: saturate(1.05);
  }

  .hero__overlay {
    position: absolute; inset: 0; z-index: -1;
    background: linear-gradient(to bottom, rgba(0,0,0,.55), rgba(0,0,0,.35) 40%, rgba(0,0,0,.55));
  }

  .hero__graphic {
    position: absolute; inset: 0; margin: auto;
    width: min(70vmin, 900px); height: auto;
    opacity: .28; mix-blend-mode: screen; pointer-events: none; z-index: 0;
  }

  .hero__content {
    text-align: center; color: #fff; max-width: 980px; padding: 6rem 1.25rem 4rem; z-index: 1;
  }

  .hero__title {
    font-size: clamp(2rem, 4vw + 1rem, 3.5rem); line-height: 1.1;
    margin: 0 0 .75rem; text-shadow: 0 3px 18px rgba(0,0,0,.35);
  }

  /* SUBTITLE → Lato (remove Wittgenstein) */
  .hero__subtitle {
    font-family: "Lato", system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Noto Sans";
    font-size: clamp(1.25rem, 1.6vw + 0.6rem, 1.9rem);
    line-height: 1.35;
    opacity: .95;
    margin: 0 auto 1.25rem;
    max-width: 48ch;
    text-shadow: 0 2px 12px rgba(0,0,0,.3);
  }

  .front-nav { margin-top: 1rem; display: flex; flex-direction: column; align-items: center; gap: 1rem; }
  .front-nav__row { display: flex; flex-wrap: wrap; justify-content: center; gap: .75rem; }

  /* Pills inside the hero: Lato + hover lift */
  .btn-pill {
    display: inline-block; padding: .7rem 1.1rem; border-radius: 9999px;
    background: #121212; color: #fff; text-decoration: none;
    font-family: "Lato", system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Noto Sans";
    font-weight: 700; line-height: 1;
    box-shadow: 0 6px 18px rgba(0,0,0,.18);
    transition: transform .18s ease, box-shadow .18s ease, filter .18s ease;
    white-space: nowrap;
  }
  .btn-pill:hover {
    transform: translateY(-2px);
    filter: brightness(1.05);
    box-shadow: 0 10px 24px rgba(0,0,0,.24);
  }

  /* Mailing List link row under the pills */
  .hero-mailing{
    margin-top: 14px;         /* space beneath the black pills */
    text-align: center;
  }
  @media (min-width: 640px){
    .hero-mailing{ margin-top: 18px; }
  }
  .hero-mailing__link{
    display: inline-block;
    text-decoration: underline;
    font-weight: 700;
    color: #3b82f6;           /* blue-500 */
  }
  .hero-mailing__link:hover{
    color: #60a5fa;           /* blue-400 */
  }
  .hero-mailing__link:focus-visible{
    outline: 3px solid rgba(96,165,250,.85);
    outline-offset: 3px;
    border-radius: 6px;
  }

  /* Bottom CTA uses Lato + real hover animation */
  .btn-cta {
    display: inline-block; padding: 1rem 1.5rem; border-radius: 9999px;
    background: #222; color: #fff; text-decoration: none;
    font-family: "Lato", system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Noto Sans";
    font-weight: 800; letter-spacing: .02em; line-height: 1.1;
    box-shadow: 0 10px 24px rgba(0,0,0,.22);
    transition: transform .18s ease, box-shadow .18s ease, filter .18s ease;
    text-align: center;
  }
  .btn-cta:hover {
    transform: translateY(-3px);
    filter: brightness(1.06);
    box-shadow: 0 14px 32px rgba(0,0,0,.28), inset 0 1px 0 rgba(255,255,255,.08);
  }

  /* Keep the bottom CTA centered */
/* ✅ Bottom CTA row (3 buttons) */
.hero-cta-row{
  position: absolute;
  left: 50%;
  bottom: clamp(16px, 3vw, 32px);
  transform: translateX(-50%);
  z-index: 2;

  display: flex;
  gap: .75rem;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  padding: 0 1rem;
}

/* Secondary CTAs look like “ghost” buttons */
.btn-cta-secondary{
  background: transparent;
  border: 2px solid rgba(255,255,255,.85);
  color: #fff;
}

.btn-cta-secondary:hover{
  background: rgba(255,255,255,.12);
}

/* Keep your hover lift, but applied to all CTAs in the row */
.hero-cta-row .btn-cta:hover{
  transform: translateY(-6px);
}

/* Mobile: stack and widen */
@media (max-width: 640px){
  .hero-cta-row{
    flex-direction: column;
  }
  .hero-cta-row .btn-cta{
    width: min(520px, 92vw);
  }
}


  @media (max-width: 640px) {
    .hero { min-height: 70vh; }
  }
</style>
