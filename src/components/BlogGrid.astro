---
import { getCollection } from 'astro:content';

const LIMIT = 3;

// Get non-draft posts, newest first
const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => +new Date(b.data.pubDate) - +new Date(a.data.pubDate))
  .slice(0, LIMIT);
---

<section aria-labelledby="home-blog-heading" class="max-w-6xl mx-auto px-4 my-12">
  <div class="flex items-end justify-between mb-6">
    <h2 id="home-blog-heading" class="text-2xl font-semibold">Latest from the Blog</h2>
    <a href="/blog" class="text-sm underline">View all</a>
  </div>

  {posts.length === 0 ? (
    <p>No posts yet.</p>
  ) : (
    <ul class="grid gap-6 md:grid-cols-3">
      {posts.map((post) => (
        <li class="rounded-xl border border-gray-200 overflow-hidden">
          <a href={`/blog/${post.slug}/`} class="block focus:outline-none focus:ring">
            {post.data.heroImage && (
              <img
                src={post.data.heroImage}
                alt=""
                width="800"
                height="420"
                loading="lazy"
                style="width:100%;height:auto;display:block;object-fit:cover;"
              />
            )}
            <div class="p-4">
              <h3 class="text-lg font-medium">{post.data.title}</h3>
              <p class="text-xs text-gray-600 mt-1">
                {new Date(post.data.pubDate).toLocaleDateString()}
              </p>
              {post.data.excerpt && (
                <p class="text-sm text-gray-700 mt-2 line-clamp-3">{post.data.excerpt}</p>
              )}
            </div>
          </a>
        </li>
      ))}
    </ul>
  )}
</section>
