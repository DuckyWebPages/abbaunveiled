---
const columns = [
  { title: "Flax", href: "/store?cat=flax", img: "/images/store/flax.jpg" },
  { title: "Detox Products", href: "/store?cat=detox", img: "/images/store/detox.jpg" },
  { title: "Essential Oils", href: "/store?cat=eo", img: "/images/store/oils.jpg" },
  { title: "Other", href: "/store?cat=other", img: "/images/store/other.jpg" },
];
---
<section class="store">
  <div class="store__wrap">
    <h2>Shop by Focus</h2>
    <div class="store__grid">
      {columns.map(c => (
        <a class="tile" href={c.href}>
          <img src={c.img} alt={c.title} loading="lazy" />
          <span class="tile__label">{c.title}</span>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
.store { padding: 3.5rem 1.25rem; background: rgba(0,0,0,.03); }
.store__wrap { max-width: 1100px; margin: 0 auto; }
.store h2 { font-size: clamp(1.4rem, 1.4vw + 1rem, 2rem); margin: 0 0 1rem; }
.store__grid { display:grid; gap: 1rem; grid-template-columns: repeat(2, minmax(0,1fr)); }
.tile {
  position:relative; border-radius:16px; overflow:hidden; display:block; text-decoration:none; color:#fff;
  box-shadow: 0 10px 26px rgba(0,0,0,.08); isolation:isolate;
}
.tile img { width:100%; height:220px; object-fit:cover; display:block; filter: saturate(1.05); }
.tile::after{
  content:""; position:absolute; inset:0; background: linear-gradient(to top, rgba(0,0,0,.6), rgba(0,0,0,.15));
}
.tile__label{
  position:absolute; left:14px; bottom:12px; z-index:1; font-weight:700; letter-spacing:.3px;
}
.tile:hover img { transform: scale(1.02); transition: transform .25s ease; }

@media (min-width: 900px){
  .store__grid { grid-template-columns: repeat(4, minmax(0,1fr)); }
  .tile img { height: 200px; }
}
</style>
