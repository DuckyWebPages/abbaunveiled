---
// src/components/SubscribeActions.astro
const feedUrl = "https://abbaunveiled.com/rss.xml";
---

<div class="sub-actions">
  <div class="sub-actions__row">
    <!-- Direct RSS -->
    <a class="btn-cta" href="/rss.xml" rel="alternate" type="application/rss+xml">
      RSS Feed
    </a>

    <!-- Email RSS Alerts (Blogtrottr) -->
    <a
      class="btn-cta"
      href={`https://blogtrottr.com/?subscribe=${encodeURIComponent(feedUrl)}`}
      target="_blank" rel="noopener"
      title="Get emails when the RSS feed updates (free service)"
    >
      Email RSS Alerts
    </a>
  </div>

  <!-- Disclaimer -->
  <p class="rss-note" role="note">
    Subscription to the RSS service is a free service and your information will not be collected by
    AbbaUnveiled.com. If you subscribe to the RSS service the AbbaUnveiled blog posts will be forwarded to your email whenever they are posted. You can unsubscribe at any time. To be on our mailing list, you must subscribe separately via the
    <a
      href="https://forms.gle/8n3k4G4sLhQNMRSp6"
      target="_blank"
      rel="noopener noreferrer"
    >mailing list link</a> on the home page.
  </p>
</div>

<style>
.sub-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: .5rem;
}
.sub-actions__row {
  display:flex;
  gap:.75rem;
  align-items:center;
  flex-wrap:wrap;
}
.rss-note {
  display: block !important;
  margin: .25rem 0 0;
  font-size: .85rem;
  line-height: 1.4;
  color: rgba(255,255,255,.92) !important;
  max-width: 60ch;
}
.rss-note a {
  color: inherit;
  text-decoration: underline;
  text-underline-offset: 2px;
}
</style>
