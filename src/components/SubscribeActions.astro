---
// src/components/SubscribeActions.astro
const feedUrl = "https://abbaunveiled.com/rss.xml";
---
<div class="sub-actions">
  <div class="sub-actions__row">
    <a class="btn-cta" href="/rss.xml" rel="alternate" type="application/rss+xml">
      RSS Feed
    </a>
    <a
      class="btn-cta"
      href={`https://blogtrottr.com/?subscribe=${encodeURIComponent(feedUrl)}`}
      target="_blank" rel="noopener"
      title="Get emails when the RSS feed updates (free)"
    >
      Get Email Alerts
    </a>
  </div>

  <!-- Disclaimer -->
  <p class="rss-note">
    Subscription to the RSS service is a free service and your information will not be collected by
    AbbaUnveiled.com. To be on our mailing list, you must subscribe separately via the
    <a
      href="https://forms.gle/8n3k4G4sLhQNMRSp6"
      target="_blank"
      rel="noopener noreferrer"
    >mailing list link</a> on the home page.
  </p>
</div>

<style>
.sub-actions { display: grid; gap: .5rem; }
.sub-actions__row { display:flex; gap:.75rem; align-items:center; flex-wrap:wrap; }

/* small, subtle disclaimer in white */
.rss-note{
  margin: .25rem 0 0;
  font-size: .85rem;
  line-height: 1.4;
  color: rgba(255,255,255,.92);   /* ‚Üê white text, slightly softened */
  max-width: 60ch;
}
.rss-note a{
  color: inherit;                 /* stays white */
  text-decoration: underline;
  text-underline-offset: 2px;
}

</style>
