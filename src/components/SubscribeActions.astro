---
// src/components/SubscribeActions.astro
const feedUrl = "https://abbaunveiled.com/rss.xml";
---

<div class="sub-actions">
  <div class="sub-actions__row">
    <a class="btn-cta" href="/rss.xml" rel="alternate" type="application/rss+xml">
      RSS Feed
    </a>
  </div>

  <!-- Disclaimer -->
  <p class="rss-note" role="note">
    Subscription to the RSS service is a free service and your information will not be collected by
    AbbaUnveiled.com. To be on our mailing list, you must subscribe separately via the
    <a
      href="https://forms.gle/8n3k4G4sLhQNMRSp6"
      target="_blank"
      rel="noopener noreferrer"
    >mailing list link</a> on the home page.
  </p>
</div>

<style>
/* Stack content vertically to guarantee space for the disclaimer */
.sub-actions{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: .5rem;
}

/* Buttons row */
.sub-actions__row{
  display:flex;
  gap:.75rem;
  align-items:center;
  flex-wrap:wrap;
}

/* Small, white disclaimer under the buttons */
.rss-note{
  display: block !important;           /* beat any global footer p rules */
  margin: .25rem 0 0;
  font-size: .85rem;
  line-height: 1.4;
  color: rgba(255,255,255,.92) !important;   /* force white on dark footers */
  max-width: 60ch;
}

/* Link matches the white text and remains clearly clickable */
.rss-note a{
  color: inherit;
  text-decoration: underline;
  text-underline-offset: 2px;
}
</style>
