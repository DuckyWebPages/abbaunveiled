---
const title = "Contact | Abba Unveiled";
---

<html lang="en">
  <head>
    <link rel="preload" as="image" href="/images/logcabin-poster.jpg" />
    <title>{title}</title>
    <meta name="description" content="Contact Abba Unveiled" />
  </head>
  <body style="margin:0;">
    <section class="contact-hero">
     

      <div class="contact-overlay"></div>

      <div class="contact-box">
        <h1>Contact Us</h1>
        <p>Email: <a href="mailto:abbaunveiled@gmail.com">abbaunveiled@gmail.com</a></p>
       

        <form class="contact-form" action="https://formspree.io/f/xkgzlpgj" method="POST">
  <label>
    Name:<br />
    <input type="text" name="name" required />
  </label>
  <label>
    Email:<br />
    <input type="email" name="email" required />
  </label>
  <label>
    Message:<br />
    <textarea name="message" rows="6" required></textarea>
  </label>
  <button type="submit">Send Message</button>
</form>

      </div>
    </section>

    <style>
      .contact-hero {
        position: relative;
        height: 100vh;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #000 url('/images/logcabin-poster.jpg') center / cover no-repeat; /* ‚Üê still */
}
/* Keep the dark overlay for readability */
.contact-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: -1;
}
      .contact-video {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -2;
      }
      .contact-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.4);
        z-index: -1;
      }
      .contact-box {
        background: rgba(255, 255, 255, 0.85); /* üëà semi-transparent white */
        padding: 2rem;
        border-radius: 12px;
        max-width: 500px;
        width: 90%;
        box-shadow: 0 8px 30px rgba(0,0,0,0.25);
      }
      .contact-box h1 {
        margin-bottom: 1rem;
      }
      .contact-box p {
        margin-bottom: 1rem;
      }
      .contact-box form {
        display: grid;
        gap: 1rem;
      }
      .contact-box input,
      .contact-box textarea {
        width: 100%;
        padding: 0.6rem;
        border: 1px solid #ccc;
        border-radius: 6px;
      }
      .contact-box button {
        background: #0d1a40; /* dark navy blue */
        color: #fff;
        border: none;
        padding: 0.75rem 1.25rem;
        border-radius: 9999px;
        cursor: pointer;
        font-weight: 600;
        transition: background 0.2s ease;
    
      }
      .contact-box button:hover {
        background: #132b63;
      }
    </style>
    <script>
  (function () {
    const form = document.querySelector('.contact-form');
    if (!form) return;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const data = new FormData(form);

      try {
        const res = await fetch(form.action, {
          method: 'POST',
          body: data,
          headers: { 'Accept': 'application/json' }
        });

        if (res.ok) {
          // force redirect to your local thanks page
          window.location.href = '/thanks';
        } else {
          alert('Sorry, there was an error sending your message. Please email abbaunveiled@gmail.com.');
        }
      } catch (err) {
        alert('Network error. Please email abbaunveiled@gmail.com.');
      }
    });
  })();
</script>

  </body>
</html>


