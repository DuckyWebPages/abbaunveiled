---
// src/pages/podcast.astro
const title = "Podcast | Abba Unveiled";
---

<html lang="en">
  <head>
    <title>{title}</title>
    <meta name="description" content="Listen to the Abba Unveiled podcast." />
    <style>
      :root { --panel-bg: rgba(255,255,255,0.9); }

      /* Base */
      body {
        margin: 0;
        font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif;
      }
      .wrap {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem 1rem;
      }

      /* Header */
      .site-header {
        position: sticky;
        top: 0;
        z-index: 50;
        background: #fff;
        border-bottom: 1px solid #eee;
      }
      .site-header__inner {
        max-width: 1100px;
        margin: 0 auto;
        padding: 10px 16px;
        display: flex;
        align-items: center;
        gap: 16px;
      }
      .brand {
        font-weight: 800;
        text-decoration: none;
        color: #111;
        margin-right: auto;
      }
      .nav {
        display: flex;
        gap: 8px;
        list-style: none;
        margin: 0;
        padding: 0;
      }
      .nav a {
        display: inline-block;
        padding: 8px 12px;
        border-radius: 10px;
        text-decoration: none;
        color: #111;
      }
      .nav a:hover { background: #f2f2f2; }
      /* optional ‚Äúactive‚Äù look if you reuse this on other pages
         .nav a[aria-current="page"] { background:#111; color:#fff; } */

      /* Headline */
      h1 {
        font-size: 2rem;
        margin: 0 0 1rem 0;
        text-align: center;
        color: #fff; /* WHITE */
        text-shadow:
          0 1px 2px rgba(0,0,0,0.85),
          0 2px 8px rgba(0,0,0,0.65); /* BLACK SHADOW */
      }

      /* Panel + Player */
      .panel {
        background: var(--panel-bg);
        backdrop-filter: blur(3px);
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: 0 6px 24px rgba(0,0,0,0.2);
      }
      .player {
        width: 100%;
        height: 520px;
        border: 0;
        display: block;
      }

      /* CTA pill styling */
      .btn-cta {
        display: inline-block;
        padding: 0.9rem 1.6rem;
        border-radius: 9999px;
        background: #000;
        color: #fff !important;
        text-decoration: none;
        font-weight: 700;
        line-height: 1;
        box-shadow: 0 6px 18px rgba(0,0,0,0.35);
        transition: transform .08s ease, box-shadow .2s ease, background .2s ease;
        -webkit-appearance: none;
      }
      .btn-cta:hover { background: #111; box-shadow: 0 8px 22px rgba(0,0,0,0.45); }
      .btn-cta:active { transform: translateY(1px); }
      .btn-cta:visited { color: #fff; }
    </style>
  </head>

  <body>
    <!-- NEW: Sticky header with tabs -->
    <header class="site-header">
      <div class="site-header__inner">
        <a class="brand" href="/">Abba Unveiled</a>
        <ul class="nav">
          <li><a href="/">Home</a></li>
          <li><a href="/blog/">Blog</a></li>
          <li><a href="/resources/">Resources</a></li>
        </ul>
      </div>
    </header>

    <section
      style="
        min-height: 100vh;
        background: url('/images/wood-background.jpg') center center / cover no-repeat fixed;
      "
    >
      <main class="wrap">
        <h1>üéôÔ∏è Abba Unveiled Podcast</h1>
        <div class="panel">
          <iframe
            class="player"
            title="Abba Unveiled Podcast"
            src="https://widget.spreaker.com/player?show_id=6578036&theme=light&playlist=show&playlist-continuous=true"
            allow="autoplay"
          ></iframe>
        </div>

        <!-- CTA pill button -->
        <div style="text-align:center; margin-top:2rem;">
          <a href="/store" class="btn-cta">
            Grab <em>The Yahweh Deception</em> book here!
          </a>
        </div>
      </main>
    </section>
  </body>
</html>
