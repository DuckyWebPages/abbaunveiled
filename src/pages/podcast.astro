---
// src/pages/podcast.astro
const title = "Podcast | Abba Unveiled";
---

<html lang="en">
  <head>
    <title>{title}</title>
    <meta name="description" content="Listen to the Abba Unveiled podcast." />
    <script async src="https://widget.spreaker.com/widgets.js"></script>
  </head>
  <body class="min-h-screen">
    <main style="max-width: 900px; margin: 2rem auto; padding: 1rem;">
      <h1 style="font-size:2rem; margin-bottom:1rem;">🎙️ Abba Unveiled Podcast</h1>

      <!-- Spreaker Show Player -->
      <a
        class="spreaker-player"
        href="https://www.spreaker.com/podcast/abba-unveiled-unveiling-the-father-jesus-revealed--6578036"
        data-resource="show_id=6578036"
        data-width="100%"
        data-height="200px"
        data-theme="light"
        data-playlist="false"
        data-playlist-continuous="false"
        data-chapters-image="true"
        data-episode-image-position="right"
        data-hide-logo="false"
        data-hide-likes="false"
        data-hide-comments="false"
        data-hide-sharing="false"
        data-hide-download="false"
        data-title="Abba Unveiled - Unveiling the Father Jesus Revealed"
      >
        Listen to "Abba Unveiled - Unveiling the Father Jesus Revealed" on Spreaker.
      </a>
    </main>
  </body>
</html>
