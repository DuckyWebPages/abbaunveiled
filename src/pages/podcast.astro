---
// src/pages/podcast.astro
const title = "Podcast | Abba Unveiled";
---

<html lang="en">
  <head>
    <title>{title}</title>
    <meta name="description" content="Listen to the Abba Unveiled podcast." />
    <!-- Spreaker widget (JS) -->
    <script async src="https://widget.spreaker.com/widgets.js"></script>
    <style>
      body {
        min-height: 100vh;
        margin: 0;
        /* NOTE: now points to /images/... inside /public */
        background: url('/images/wood-background.jpg') center center / cover no-repeat fixed;
        font-family: sans-serif;
      }

      .podcast-wrap {
        max-width: 900px;
        margin: 2rem auto;
        padding: 1rem;
      }

      h1 {
        font-size: 2rem;
        margin-bottom: 1rem;
        text-align: center;
        color: #222;
        text-shadow: 1px 1px 3px rgba(255,255,255,0.7);
      }

      .panel {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(3px);
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: 0 6px 24px rgba(0,0,0,0.2);
      }

      /* Optional: ensure the player spans full width of the panel */
      .panel > .spreaker-player,
      .panel > iframe {
        width: 100%;
      }
    </style>
  </head>

  <body>
    <main class="podcast-wrap">
      <h1>🎙️ Abba Unveiled Podcast</h1>

      <div class="panel">
        <!-- Preferred: JS widget that lists ALL episodes for the show -->
        <div
          class="spreaker-player"
          data-resource="show_id=6548036"
          data-playlist="show"
          data-theme="light"
          data-width="100%"
          data-height="475px"
          data-autoplay="false"
          data-playlist-continuous="true"
        ></div>

        <!-- Fallback for no-JS / script load issues -->
        <noscript>
          <iframe
            title="Abba Unveiled Podcast"
