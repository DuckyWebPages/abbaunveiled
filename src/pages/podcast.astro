---
// src/pages/podcast.astro
const title = "Podcast | Abba Unveiled";
---

<html lang="en">
  <head>
    <title>{title}</title>
    <meta name="description" content="Listen to the Abba Unveiled podcast." />
    <style>
      :root { --panel-bg: rgba(255,255,255,0.9); }
      body {
        margin: 0;
        font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif;
      }
      .wrap {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem 1rem;
      }
      h1 {
        font-size: 2rem;
        margin: 0 0 1rem 0;
        text-align: center;
        color: silver; /* changed from #222 */
        text-shadow: 1px 1px 6px rgba(255,255,255,0.8);
      }
      .panel {
        background: var(--panel-bg);
        backdrop-filter: blur(3px);
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: 0 6px 24px rgba(0,0,0,0.2);
      }
      .player {
        width: 100%;
        height: 520px;
        border: 0;
        display: block;
      }
    </style>
  </head>

  <body>
    <section
      style="
        min-height: 100vh;
        background: url('/images/wood-background.jpg') center center / cover no-repeat fixed;
      "
    >
      <main class="wrap">
        <h1>üéôÔ∏è Abba Unveiled Podcast</h1>
        <div class="panel">
          <iframe
            class="player"
            title="Abba Unveiled Podcast"
            src="https://widget.spreaker.com/player?show_id=6578036&theme=light&playlist=show&playlist-continuous=true"
            allow="autoplay"
          ></iframe>
        </div>

        <!-- CTA pill button using global style -->
        <div style="text-align:center; margin-top:2rem;">
          <a href="/store" class="btn-cta">
            Grab the Yahweh Deception book here
          </a>
        </div>
      </main>
    </section>
  </body>
</html>
