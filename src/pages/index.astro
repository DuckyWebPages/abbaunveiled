---
import "../styles/global.css"; // keep CSS loaded on homepage
import HeroVideo from "../components/HeroVideo.astro";
import AboutSection from "../components/AboutSection.astro";
import FeaturedShowcase from "../components/FeaturedShowcase.astro";
import Newsletter from "../components/Newsletter.astro";

const pageTitle = "Abba Unveiled â€” Home";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{pageTitle}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="Abba Unveiled: intimacy with the Father and unveiling the story behind the Name."
    />
    <link rel="preload" href="/images/night-sky-poster.jpg" as="image" />
    <link rel="preload" href="/fonts/FinestRomanceScript.woff2" as="font" type="font/woff2" crossorigin />
  </head>
  <body>
    <main class="home">
      <!-- Hero with centered overlay title -->
      <div class="hero-wrap">
        <HeroVideo overlayImageSrc="/images/tetrawhite.png?v=20250903" />
        <h1 class="hero-title hero-title-overlay">Abba Unveiled</h1>
      </div>

      <AboutSection />

      <FeaturedShowcase
        title="The Yahweh Deception"
        body="A research-driven journey that points to the Father Jesus revealed."
        image="/images/featured-book.png"
        primary={{ href: "/learn-more", label: "Why Abba Unveiled?" }}
        secondary={{ href: "/resources", label: "See Research Notes" }}
      />

      <Newsletter />
    </main>
  </body>
</html>
