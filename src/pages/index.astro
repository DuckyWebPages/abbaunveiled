---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroVideo from "../components/HeroVideo.astro";
import AboutSection from "../components/AboutSection.astro";
import FeaturedShowcase from "../components/FeaturedShowcase.astro";
import Newsletter from "../components/Newsletter.astro";

const pageTitle = "Abba Unveiled — Home";
---

<BaseLayout
  pageTitle={pageTitle}
  description="Abba Unveiled: intimacy with the Father and unveiling the story behind the Name."
>
  <div class="hero-full">
    <HeroVideo
      overlayImageSrc="/images/tetrawhite.png?v=20250903"
      subtitle="Getting to Know the Father Jesus Revealed"
      bookCtaHref="/store"
      bookCtaLabel="Get the Book! The Yahweh Deception, by WR Selvig"
      musicCtaHref="/songs"
      musicCtaLabel="The Music"
      youtubeCtaHref="https://www.youtube.com/channel/UCmH4bZ95_Tot8wU_EDyDcQA"
      youtubeCtaLabel="YouTube Channel"
    />
  </div>

  <main class="home">
    <AboutSection
      image={null}
      title="Why Abba Unveiled?"
      body="Knowledge is increasing in the earth, just like Daniel prophesied..."
    />

    <section class="home-featured">
      <FeaturedShowcase
        title="The Yahweh Deception"
        body="Reclaiming the Father Jesus Revealed."
        image="/images/ydlibrary.png"
        primary={{ href: "/store", label: "Go to Store" }}
        secondary={{ href: "/songs", label: "The Music" }}
      />
    </section>

    <section class="home-newsletter">
      <Newsletter
        title="Get Updates — Join the Mailing List"
        note="Occasional emails, no spam."
        ctaHref="https://forms.gle/8n3k4G4sLhQNMRSp6"
        ctaLabel="Subscribe"
      />
    </section>
  </main>
</BaseLayout>
