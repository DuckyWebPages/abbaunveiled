---
// FILE: src/layouts/BaseLayout.astro
interface Props {
  pageTitle?: string;
  description?: string;
}

const {
  pageTitle = "Abba Unveiled",
  description = "",
} = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    {pageTitle && <title>{pageTitle}</title>}
    {description && <meta name="description" content={description} />}
  </head>

  <body class="site-bg">
    <slot />
  </body>
</html>

<style is:global>
  /* page background */
  .site-bg{
    min-height: 100vh;
    background:
      linear-gradient(rgba(0,0,0,.45), rgba(0,0,0,.35)),
      url("/images/backgrounds/aurora-night-1920.jpg") center/cover no-repeat fixed;
  }
  @media (max-width: 800px){
    .site-bg{ background-attachment: scroll; }
  }
</style>
